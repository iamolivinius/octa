<h2 class="ui dividing header">
  <i class="info circle icon"></i>
  <div class="content">
    Containers
    <div class="sub header">
      Select the observer's containers.
    </div>
  </div>
</h2>

<table class="ui table" id="container-table">
  <thead>
    <tr>
      <th width="20%">Name</th>
      <th width="20%">Enclosing Identifier</th>
      <th>Container</th>
    </tr>
  </thead>
  <tbody>
    {{#each containers}}
    <tr>
      <td class="tbl-container-name">{{input type="text" value=this.name}}</td>
      <td>{{this.enclosing}}</td>
      <td>{{this.pattern}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        <div class="ui blue labeled icon button" id="btn-select-container" {{action "onSelectContainer"}}><i class="add icon"></i> Select Container</div>
        <div class="ui red labeled disabled icon button" id="btn-remove-container"><i class="remove icon"></i> Remove</div>
      </th>
    </tr>
  </tfoot>
</table>

<div class="ui left labeled icon button" {{action "onBack"}}>
  <i class="left arrow icon"></i>
  Back
</div>

<div class="ui right labeled icon primary button" {{action "onNext"}}>
  <i class="right arrow icon"></i>
  Next
</div>
